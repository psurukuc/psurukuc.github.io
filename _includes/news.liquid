
<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% if include.timeless_first %}
          {% assign timeless_news = site.news | where: "timeless", true %}
          {% assign regular_news = site.news | where_exp: "n", "n.timeless != true" %}
          {% assign timeless_news = timeless_news | sort: "date" | reverse %}
          {% assign regular_news = regular_news | sort: "date" | reverse %}
          {% assign news = timeless_news | concat: regular_news %}
        {% else %}
          {% assign news = site.news | sort: "date" | reverse %}
        {% endif %}

        {% if include.limit and page.announcements.limit %}
          {% assign news_limit = page.announcements.limit %}
        {% else %}
          {% assign news_limit = news | size %}
        {% endif %}
        {% for item in news limit: news_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>